---
import { AttendancePercentage, AttendanceByDate } from "@/components/Attendance";
import Main from "../../../layouts/Main.astro";
import Navbar from "@/components/Navbar.astro";

export const prerender = false;

const { classId } = Astro.params;
if (Number.isNaN(parseInt(classId ?? ""))) {
  return Astro.redirect("/404");
}
---

<Main>
  <Navbar />
  <div class="container mx-auto mt-10">
    <AttendanceByDate classId={parseInt(classId ?? "")} client:load />
    <div class="my-10"></div>
    <AttendancePercentage classId={parseInt(classId ?? "")} client:load />
  </div>
</Main>
